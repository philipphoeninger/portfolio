{
  "$schema": "https://raw.githubusercontent.com/lit/lit/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["de-DE"],
  "tsConfig": "./tsconfig.json",
  "output": {
    "mode": "runtime",
    "outputDir": "./src/assets/i18n/locales",
    "localeCodesModule": "./src/assets/i18n/locale-codes.ts"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "src/assets/i18n/xliff/"
  }
}
